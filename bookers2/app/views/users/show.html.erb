<!-- マイページ -->
<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<% if flash[:notice] %>
		  <p><%= flash[:notice] %></p>
			<% end %>
			<%= render 'users/list', user: @user %>
			<%= render 'books/list', book: @book %>
		</div>
		<div class="col-lg-9">
		<table class="table table-striped">
		<h2> Books </h2>
		  <thead>
		  	<tr>
		  		<th colspan="1"> </th>
		  		<th>Title</th>
		  		<th >Opinion</th>
		  	</tr>
		  </thead>
		  <tbody>
		  <% @books.each do |book| %>
		  <tr>
		  	<td>
		  		<%= link_to attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle profile-img", fallback: "no_image.jpg" %>
		  	</td>
		  	<td>
		  		<%= link_to book.title, book_path(book[:id]) %>
		  	</td>
		  	<td>
		  		<%= book.body %>
		  	</td>
		  </tr>
		  	<% end %>
		  </tbody>
		</table>
		</div>
	</div>
</div>


