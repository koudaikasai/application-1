<h2> User info</h2>
<table class="table">
	<tbody>
		<tr>
		<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle profile-img", fallback: "no_image.jpg" %>
		</tr>
		<tr>
			<th> name</th>
			<th> <%= user.name %></th>
		</tr>
		<tr>
			<th> introduction</th>
			<th> <%= user.introduction %></th>
		</tr>
	</tbody>
</table>
<div>
		 <%= link_to "", edit_user_path(user[:id]), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
 </div>


