<!-- 本編集 -->
<div class="container">
	<p id="notice"></p>
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
<h1> Editing Book</h1>

<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
<div id="error_explanation" style="color: red;">
	<h3> <%= @book.errors.count %>件のエラー(error)が発生しました。</h3>
	<ul>
		<% @book.errors.full_messages.each do |message| %>
		<li> <%= message %> </li>
	<% end %>
	</ul>
</div>
<% end %>
<h4> Title</h4>
<%= f.text_field :title %>
<h4>Poinion</h4>
<%= f.text_field :body %>
<p>
	<%= f.submit 'Update Book' %>
</p>
<p>
<%= link_to "Show", books_path(@book) %>
|
<%= link_to "Back", book_path(@book) %>
</p>
</div>
</div>
</div>
<% end %>